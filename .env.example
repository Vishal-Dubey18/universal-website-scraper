# Universal Website Scraper Configuration
# Copy this file to .env and modify as needed

# Application Settings
APP_NAME=Universal Website Scraper
APP_VERSION=1.0.0
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Scraping Timeouts (in seconds)
STATIC_TIMEOUT=30
PLAYWRIGHT_TIMEOUT=60
INTERACTION_TIMEOUT=10
GLOBAL_TIMEOUT=120

# Scraping Strategy
JS_FALLBACK_MIN_TEXT=400

# Interaction Settings
MAX_DEPTH=3
SCROLL_DELAY=2.0
SCROLL_ATTEMPTS=3

# Logging
LOG_LEVEL=INFO
ENABLE_PLAYWRIGHT_HEADLESS=true

# User Agent
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
